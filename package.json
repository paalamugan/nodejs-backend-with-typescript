{
    "name": "nodejs-backend-with-typescript",
    "version": "1.0.0",
    "description": "Its building top of the Node.js express apps with TypeScript",
    "repository": {
        "type": "git",
        "url": "https://github.com/paalamugan/nodejs-backend-with-typescript"
    },
    "author": "Paalamugan",
    "license": "MIT",
    "scripts": {
        "build-sass": "sass src/public/css/main.scss dist/public/css/main.css",
        "build-ts": "tsc",
        "build": "npm run build-sass && npm run build-ts && npm run lint && npm run copy-static-assets",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "debug": "npm run build && npm run watch-debug",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "serve-debug": "nodemon --inspect dist/server.js",
        "serve": "node dist/server.js",
        "start": "npm run serve",
        "test": "jest --forceExit --coverage --verbose",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
        "watch-node": "nodemon dist/server.js",
        "watch-sass": "sass --watch src/public/css/main.scss dist/public/css/main.css",
        "watch-test": "npm run test -- --watchAll",
        "watch-ts": "tsc -w",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\""
    },
    "dependencies": {
        "async": "^3.2.1",
        "bcrypt": "^5.0.1",
        "compression": "^1.7.4",
        "connect-mongo": "^4.6.0",
        "dotenv": "^10.0.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-flash": "0.0.2",
        "express-session": "^1.17.2",
        "express-validator": "^6.13.0",
        "fbgraph": "^1.4.4",
        "lodash": "^4.17.21",
        "lusca": "^1.7.0",
        "mongoose": "^6.0.12",
        "morgan": "^1.10.0",
        "nodemailer": "^6.7.0",
        "passport": "^0.5.0",
        "passport-facebook": "^3.0.0",
        "passport-local": "^1.0.0",
        "pug": "^3.0.2",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@types/async": "^3.2.8",
        "@types/bcrypt": "^5.0.0",
        "@types/chai": "4.2.22",
        "@types/compression": "1.7.2",
        "@types/concurrently": "6.3.0",
        "@types/errorhandler": "1.5.0",
        "@types/eslint": "7.28.2",
        "@types/express": "4.17.13",
        "@types/express-flash": "0.0.2",
        "@types/express-session": "1.17.4",
        "@types/jest": "^27.0.2",
        "@types/jquery": "3.5.8",
        "@types/lodash": "^4.14.176",
        "@types/lusca": "1.7.1",
        "@types/morgan": "^1.9.3",
        "@types/node": "16.11.4",
        "@types/nodemailer": "6.4.4",
        "@types/passport": "1.0.7",
        "@types/passport-facebook": "2.1.11",
        "@types/passport-local": "1.0.34",
        "@types/pug": "2.0.5",
        "@types/request": "2.48.7",
        "@types/request-promise": "4.1.48",
        "@types/shelljs": "0.8.9",
        "@types/supertest": "2.0.11",
        "@typescript-eslint/eslint-plugin": "5.1.0",
        "@typescript-eslint/parser": "5.1.0",
        "chai": "4.3.4",
        "concurrently": "6.3.0",
        "eslint": "8.1.0",
        "jest": "^27.3.1",
        "nodemon": "^2.0.14",
        "sass": "1.43.3",
        "shelljs": "0.8.4",
        "supertest": "6.1.6",
        "ts-jest": "^27.0.7",
        "ts-node": "10.4.0",
        "typescript": "4.4.4"
    }
}
